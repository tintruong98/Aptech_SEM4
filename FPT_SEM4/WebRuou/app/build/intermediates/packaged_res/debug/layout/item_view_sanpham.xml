<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="1dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageview"
        android:text="Name"
        android:textColor="#C51162"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageview"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:justificationMode="inter_word"
        android:layout_below="@id/name"
        android:textColor="@color/black"
        android:text="description" />
    <LinearLayout
        android:id="@+id/lyprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageview"
        android:layout_below="@id/description"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="#F11818"
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageview"
        android:layout_below="@id/lyprice"
        android:layout_marginTop="1dp"
        android:gravity="right">

        <TextView
            android:id="@+id/soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="30 products left"
            android:textColor="#4660F3"
            android:textSize="12dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imgthemgiohang"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@id/description"
        app:srcCompat="@drawable/giohang" />

    <TextView
        android:id="@+id/themgiohang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgthemgiohang"
        android:layout_marginLeft="22dp"
        android:text="Add to cart"
        android:textColor="#00C853"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/lyprice"
        android:layout_marginTop="30dp"
        android:background="#E0F2F1">
    </LinearLayout>
</RelativeLayout>