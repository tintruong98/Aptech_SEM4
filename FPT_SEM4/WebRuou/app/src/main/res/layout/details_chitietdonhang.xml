<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgViewAll"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Code orders:"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvidDonHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="idDonHang"
            android:textColor="#3F51B5"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Product code:"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvidSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="idSanPham"
            android:textColor="#3F51B5"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Product's name:"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name"
            android:textColor="#3F51B5"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Product Description:"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:layout_marginRight="10dp"
            android:hint="description"
            android:textColor="#3F51B5"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Quantity:"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvsoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="soluong"
            android:textColor="#3F51B5"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Unit price:"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvgiaTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="giaTien"
            android:textColor="#3F51B5"
            android:textSize="13dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Total:"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvthanhTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="thanhTien"
            android:textColor="#D50000"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Promotion:"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvpromotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="promotion"
            android:textColor="#3F51B5"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>