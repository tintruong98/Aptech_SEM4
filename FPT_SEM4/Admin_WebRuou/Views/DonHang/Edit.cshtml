@model Admin_WebRuou.Models.DonHang

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="page-content">
        <div>
            <a href="@Url.Action("ListDonHang", "DonHang")"><span class="btn btn-success btn-sm" style="font-size:14px">Back</span></a>
        </div>
        <div class="heading-section">
            <a style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:25px">Order of </a>
            <a style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:25px">  @ViewBag.username</a>

            <p>
                <a style="color:#ec6090; font-size:15px">Email:</a>
                <a style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">@ViewBag.email</a>
            </p>
            <p>
                <a style="color:#ec6090; font-size:15px">Address:</a>
                <a style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">@ViewBag.address</a>
            </p>
            <p>
                <a style="color:#ec6090; font-size:15px">Phone:</a>
                <a style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">@ViewBag.phone</a>
            </p>
            <p>
                <a style="color:#ec6090; font-size:15px">Booking date:</a>
                <a style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">@Model.NgayDat</a>
            </p>
            <p>
                <a style="color:#ec6090; font-size:15px">Total order:</a>
                <a style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">@Model.TongTien.ToString("N").Substring(0,@Model.TongTien.ToString("N").Length-3)</a>
            </p>
        </div>
        <!-------------------------->
        <br />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IdKhachHang" />
                    <input type="hidden" asp-for="NgayDat" />
                    <input type="hidden" asp-for="SoLuong" />
                    <input type="hidden" asp-for="TongTien" />

                    <div class="form-group form-check">
                        <label class="form-check-label" style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">
                            <input class="form-check-input" asp-for="DaThanhToan" style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px" />Payment
                        </label>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">Delivery date</label>
                        <input asp-for="NgayGiao" type="" class="form-control" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px; width:auto" />
                        <span asp-validation-for="NgayGiao" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label" style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">Delivery Status</label>
                        <select asp-for="TrangThaiGH" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">
                            <option value=0>Preparing</option>
                            <option value=1>Delivering</option>
                            <option value=2>Delivered</option>
                            <option value=3>Reject</option>
                        </select>
                        <span asp-validation-for="TrangThaiGH" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" name="EditReset" class="btn btn-warning btn-sm" style="font-size:14px" />
                    </div>
                </form>
                <h5 style="color:red">@ViewBag.msg</h5>
            </div>
        </div>
        <!-------------------------->
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
