@model Admin_WebRuou.Models.DonHang

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="page-content">
        <div class="heading-section">
            <h4>Delete the order</h4>
        </div>
        <!-------------------------->
        <h5>Are you sure you want to delete this order?</h5>
        <h5 style="color:red">@ViewBag.msg</h5>
        <br />
        <div>
            <dl class="row">
                <div class="col-sm-12">
                    <a style="font-size:14px;color:white">Code orders: @Model.Id</a>
                </div>
                <br />
                <div class="col-sm-12">
                    <a style="font-size:14px;color:white">Booking date: @Model.NgayDat</a>
                </div>
                <br />
                <div class="col-sm-12">
                    <a style="font-size:14px;color:white">Quantity: @Model.SoLuong</a>
                </div>
                <br />
                <div class="col-sm-12">
                    <a style="font-size:14px;color:white">Total order: @Model.TongTien.ToString("N").Substring(0,Model.TongTien.ToString("N").Length-3) VND</a>
                </div>
            </dl>
            <br />
            <form asp-action="Delete" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" style="font-size:14px" onclick="return confirm('Are you sure you want to delete?')" />
                <a href="@Url.Action("ListDonHang", "DonHang")">
                    <span class="btn btn-primary btn-sm" style="font-size:14px">Back</span>
                </a>
            </form>
        </div>
        <!-------------------------->
    </div>
</div>
