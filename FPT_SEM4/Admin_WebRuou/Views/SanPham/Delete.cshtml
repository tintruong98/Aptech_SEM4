@model Admin_WebRuou.Models.SanPham

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="page-content">
        <div class="heading-section">
            <h4>Delete the product</h4>
        </div>
        <!-------------------------->
        <br />
        <h5>Are you sure you want to delete this product?</h5>
        <h5 style="color:red">@ViewBag.msg</h5>
        <br />
        <div>
            <dl class="row">
                <div class="col-sm-12">
                    <a style="font-size:14px;color:white">@ViewBag.name</a>
                </div>
                <br />
                <div class="col-sm-2">
                    <img src="~/@ViewBag.urlimage" height="100" />
                </div>
            </dl>
            <br />
            <form asp-action="Delete" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Name" />
                <input type="hidden" asp-for="UrlImage" />
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" style="font-size:14px" onclick="return confirm('Are you sure you want to delete?')" />
                <a href="@Url.Action("ListSanPham", "SanPham")">
                    <span class="btn btn-primary btn-sm" style="font-size:14px">Back</span>
                </a>
            </form>
        </div>
        <!-------------------------->
    </div>
</div>
