@model Admin_WebRuou.Models.SanPham

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="page-content">
        <div class="heading-section">
            <h4>Add new product</h4>
        </div>
        <a href="@Url.Action("ListSanPham", "SanPham")">
            <span class="btn btn-success btn-sm" style="font-size:14px">Back</span>
        </a>
        <hr />
        <h5 style="color:red">@ViewBag.msg</h5>
        <div class="row ">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input class="form-check-input" asp-for="Id" hidden />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label" style="color:white"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label style="color:white" class=" control-label">Description</label>
                        <textarea class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

@*                    <div class="form-group">
                        <label asp-for="Description" class="control-label" style="color:white"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
*@
                    <div class="form-group">
                        <label asp-for="UrlImage" class="control-label" style="color:white"></label>
                        <input id="file" name="file" type="file" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label" style="color:white"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Promotion" class="control-label" style="color:white"></label>
                        <input asp-for="Promotion" class="form-control" />
                        <span asp-validation-for="Promotion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="color:white">Quantity</label>
                        <input asp-for="Soluong" class="form-control" />
                        <span asp-validation-for="Soluong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btn-sm" style="font-size:14px" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }