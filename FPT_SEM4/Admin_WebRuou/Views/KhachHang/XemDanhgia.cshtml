@model Admin_WebRuou.Models.FeedBack

@{
    ViewData["Title"] = "XemDanhgia";
}
<div class="container">
    <div class="page-content">
        <div class="gaming-library">
            <table width="100%" cellpadding="5">
                <tr>
                    <td width="25%">
                        <img src="~/@ViewBag.urlimage" width="250" height="300" alt="">
                    </td>
                    <td width="75%">
                        <center>
                            <div class="heading-section">
                                <li><a style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:25px">Order completed</a></li>
                                <li><a style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:14px">Thank you for shopping at Wine Gourmet</a></li>
                            </div>
                        </center>
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Danhgia" enctype="multipart/form-data" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input asp-for="Id" class="form-control" hidden />
                                    <input asp-for="IdKhachHang" value="@ViewBag.Id_" class="form-control" hidden />
                                    <input asp-for="IdDonHang" value="@ViewBag.iddonhang" class="form-control" hidden />
                                    <input asp-for="IdSanPham" value="@ViewBag.idsanpham" class="form-control" hidden />
                                    <input asp-for="ThoiGianFeed" value="" class="form-control" hidden />
                                    <input name="urlimage" value="@ViewBag.urlimage" hidden />
                                    <div class="form-group">
                                        <label style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:14px" class=" control-label">Comment</label>
                                        <textarea class="form-control" asp-for="Contents" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:14px" readonly></textarea>
                                    </div>

                                    <div class="form-group">
                                        <label style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:14px" class=" control-label">Evaluate</label>
                                        <center>
                                            @if (Model.Evaluate == 0)
                                            {
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                            }
                                            @if (Model.Evaluate == 1)
                                            {
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                            }
                                            @if (Model.Evaluate == 2)
                                            {
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                            }
                                            @if (Model.Evaluate == 3)
                                            {
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                            }
                                            @if (Model.Evaluate == 4)
                                            {
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:dimgray"></i></a>
                                            }
                                            @if (Model.Evaluate == 5)
                                            {
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                                <a><i class="fa fa-star fa-2xl" style="color:yellow"></i></a>
                                            }
                                        </center>
                                    </div>
                                    <center>
                                        <div class="form-group">
                                            @if (string.IsNullOrEmpty(ViewBag.back))
                                            {
                                                <div class="main-button"><a href="@Url.Action("XemChiTieDonHang", "KhachHang", new {varLocal=ViewBag.iddonhang,trangthaiGH=2,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">Back</a></div>
                                            }
                                            else
                                            {
                                                <div class="main-button"><a href="@Url.Action("NhanXetKhachHang", "KhachHang")">Back</a></div>
                                            }
                                        </div>
                                    </center>
                                </form>
                            </div>
                            <div class="text-center w-100">
                                <br />
                                <h5 style="color:#ec6090">@ViewBag.msg</h5>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
