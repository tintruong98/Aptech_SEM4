@model Admin_WebRuou.Models.KhachHang

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="page-content">
        <div class="heading-section">
            <h4>Change customer information</h4>
        </div>
        <!-------------------------->
        <a href="@Url.Action("ListKhachHang", "KhachHang")">
            <span class="btn btn-success btn-sm" style="font-size:14px">Back</span>
        </a>
        <hr />
        <h5 style="color:red">@ViewBag.msg</h5>

        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label" style="color:white"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label" style="color:white"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label" style="color:white"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label" style="color:white"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label" style="color:white"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label" style="color:white"></label>
                        <input asp-for="Status" class="form-control" style="width:70px"/>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" name="EditReset" class="btn btn-warning btn-sm" style="font-size:14px" />
                    </div>
                </form>
            </div>
        </div>
        <!-------------------------->
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
