@model IEnumerable<Admin_WebRuou.Models.DonHangImage>

@{
    ViewData["Title"] = "XemDonHang";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <div class="gaming-library">
                    <div class="col-lg-12">
                        <div class="heading-section">
                            <a href="@Url.Action("ListKhachHang", "KhachHang")">
                                <span class="btn btn-success btn-sm" style="font-size:14px">Back</span>
                                </a>
                            <br />
                            <h4><em>@ViewBag.username order </em>purchased</h4>
                        </div>
                        <div>
                            <table width="100%">
                                <tr>
                                    <td with 25%>
                                        @if (ViewBag.trangthaiGH == 0)
                                        {
                                            <div class="main-button"><a href="@Url.Action("XemDonHang", "KhachHang", new {trangthaiGH=0,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})" style="color:yellow">Preparing</a></div>
                                        }
                                        else
                                        {
                                            <div class="main-button"><a href="@Url.Action("XemDonHang", "KhachHang", new {trangthaiGH=0,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">Preparing</a></div>
                                        }
                                    </td>
                                    <td with 25%>
                                        @if (ViewBag.trangthaiGH == 1)
                                        {
                                            <div class="main-button"><a href="@Url.Action("XemDonHang", "KhachHang", new {trangthaiGH=1,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})" style="color:yellow">Delivering</a></div>
                                        }
                                        else
                                        {
                                            <div class="main-button"><a href="@Url.Action("XemDonHang", "KhachHang", new {trangthaiGH=1,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">Delivering</a></div>
                                        }
                                    </td>
                                    <td with 25%>
                                        @if (ViewBag.trangthaiGH == 2)
                                        {
                                            <div class="main-button"><a href="@Url.Action("XemDonHang", "KhachHang", new {trangthaiGH=2,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})" style="color:yellow">Delivered</a></div>
                                        }
                                        else
                                        {
                                            <div class="main-button"><a href="@Url.Action("XemDonHang", "KhachHang", new {trangthaiGH=2,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">Delivered</a></div>
                                        }
                                    </td>
                                    <td with 25%>
                                        @if (ViewBag.trangthaiGH == 3)
                                        {
                                            <div class="main-button"><a href="@Url.Action("XemDonHang", "KhachHang", new {trangthaiGH=3,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})" style="color:yellow">Reject</a></div>
                                        }
                                        else
                                        {
                                            <div class="main-button"><a href="@Url.Action("XemDonHang", "KhachHang", new {trangthaiGH=3,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">Reject</a></div>

                                        }
                                    </td>
                                </tr>
                            </table>
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>
                        @if (!string.IsNullOrEmpty(ViewBag.msg))
                        {
                            <center>
                                <div>
                                    <li><div class="main-border-button"><a style="color:white">@ViewBag.msg</a></div></li>
                                </div>
                            </center>
                        }

                        @foreach (var item in Model)
                        {
                            <div class="item">
                                <ul>
                                    <li><img src="~/@item.Url" alt="" class="templatemo-item"></li>
                                    @*<li><h4>Mã đơn</h4><span style="color:white">@item.Id</span></li>*@
                                    <li><h4>Booking date</h4><span style="color:white">@item.NgayDat.Substring(0,10)</span></li>

                                    <li><h4>Delivery date</h4><span style="color:white">@item.NgayGiao.Substring(0,10)</span></li>

                                    <li><h4>Quantity</h4><span style="color:white">@item.SoLuong</span></li>

                                    <li><h4>Total order</h4><span style="color:#ec6090">@item.TongTien.ToString("N").Substring(0,@item.TongTien.ToString("N").Length-3) VND</span></li>
                                    @if (item.TrangThaiGH == 0)
                                    {
                                        <li><div class="main-border-button"><a href="@Url.Action("XemChiTieDonHang", "KhachHang", new {varLocal = item.Id,trangthaiGH=item.TrangThaiGH,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">View</a></div></li>
                                    }
                                    @if (item.TrangThaiGH == 1)
                                    {
                                        <li><div class="main-border-button"><a href="@Url.Action("XemChiTieDonHang", "KhachHang", new {varLocal = item.Id,trangthaiGH=item.TrangThaiGH,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">View</a></div></li>
                                    }
                                    @if (item.TrangThaiGH == 2)
                                    {
                                        <li><div class="main-border-button"><a href="@Url.Action("XemChiTieDonHang", "KhachHang", new {varLocal = item.Id,trangthaiGH=item.TrangThaiGH,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">View</a></div></li>
                                    }
                                    @if (item.TrangThaiGH == 3)
                                    {
                                        <li><div class="main-border-button"><a href="@Url.Action("XemChiTieDonHang", "KhachHang", new {varLocal = item.Id,trangthaiGH=item.TrangThaiGH,idkhachhang=ViewBag.idkhachhang,username=ViewBag.username})">View</a></div></li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
