@model IEnumerable<App_WebRuou.Models.DonHangImage>
<!-- ***** Gaming Library Start ***** -->
<div class="gaming-library">
    <div class="col-lg-12">
        <div class="heading-section">
            <h4><em>The order you </em>purchased</h4>
        </div>
        <br />
        @if (string.IsNullOrEmpty(ViewBag.Id_))
        {
        }
        else
        {
            int dem = 0;
            @foreach (var item in Model)
            {
                dem++;
                if (dem <= 3)
                {
                    <div class="item">
                        <ul>
                            <li><img src="~/@item.Url" alt="" class="templatemo-item"></li>
                            @*                                            <li><h4>Mã đơn</h4><span style="color:white">@item.Id</span></li>*@
                            <li><h4>Booking date</h4><span style="color:white">@item.NgayDat.Substring(0,10)</span></li>

                            <li><h4>Delivery date</h4><span style="color:white">@item.NgayGiao.Substring(0,10)</span></li>

                            <li><h4>Quantity</h4><span style="color:white">@item.SoLuong</span></li>

                            <li><h4>Total order</h4><span style="color:#ec6090">@item.TongTien.ToString("N").Substring(0,@item.TongTien.ToString("N").Length-3) VND</span></li>

                            <li><div class="main-border-button"><a href="@Url.Action("XemChiTieDonHang", "KhachHang", new {varLocal = item.Id})">Detail</a></div></li>
                        </ul>
                    </div>
                }
            }
        }
    </div>
    <div class="col-lg-12">
        <div class="main-button">
            @if (string.IsNullOrEmpty(ViewBag.Id_))
            {
                <a href="@Url.Action("Login", "KhachHang")">Please login to view your private order!!!</a>
            }
            else
            {
                <a href="@Url.Action("XemDonHang", "KhachHang",new {trangthaiGH=2})">More</a>
            }
        </div>
    </div>
</div>
<!-- ***** Gaming Library End ***** -->
