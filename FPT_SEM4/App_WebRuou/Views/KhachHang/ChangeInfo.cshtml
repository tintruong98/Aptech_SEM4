@model App_WebRuou.Models.KhachHang
@{
    ViewData["Title"] = "ChangeInfo";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <!-- ***** Banner Start ***** -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="main-profile ">
                            <div class="row">
                                <div class="col-lg-5">
                                    <img src="~/assets/images/profile.jpg" alt="" style="border-radius: 23px;">
                                </div>
                                <div class="col-lg-7 align-self-center">
                                    <div class="main-info header-text">
                                        <div class="text col-lg-12 text-center">
                                            <center>
                                                <div>
                                                    <p><a style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:25px"><b>Change information</b></a></p>
                                                </div>
                                            </center>
                                            <br />
                                            <form asp-action="ChangeInfo" enctype="multipart/form-data" method="post">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="row">
                                                    <!--UserName -->
                                                    <div class="input-group col-lg-12 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-user text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input placeholder="First and last name" asp-for="UserName" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>

                                                    <!-- Email -->
                                                    <div class="input-group col-lg-12 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-envelope text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input placeholder="Email" asp-for="Email" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>

                                                    <!-- Address -->
                                                    <div class="input-group col-lg-12 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-address-book text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input placeholder="Address" asp-for="Address" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-md border-left-0 pl-3" />
                                                    </div>

                                                    <!-- Phone -->
                                                    <div class="input-group col-lg-12 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-phone text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input placeholder="Phone" asp-for="Phone" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-md border-left-0 pl-3" />
                                                    </div>

                                                    <input type="hidden" asp-for="Id" />
                                                    <input type="hidden" asp-for="Password" />
                                                    <input type="hidden" asp-for="Status" />

                                                    <!-- Submit Button -->
                                                    <div class="form-group col-lg-12 mx-auto mb-0">
                                                        <input type="submit" value="Change" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px" class="btn btn-primary btn-sm btn-block py-2 font-weight-bold" />
                                                    </div>
                                                    <div class="text-center w-100">
                                                        <br />
                                                        <h5 style="color:#ec6090">@ViewBag.msg</h5>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
