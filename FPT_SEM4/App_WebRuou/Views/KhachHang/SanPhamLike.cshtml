@model App_WebRuou.Models.SanPhamFavourite
<div class="row">
    <div class="col-lg-12 col-sm-6">
        <div class="item">
            <table width="100%" cellpadding="10">
                <tr>
                    <td width="25%">
                        @if (string.IsNullOrEmpty(ViewBag.UserName_))
                        {
                            <a href="@Url.Action("Login", "KhachHang", new {varLocal=Model.Id})"><img src="~/@Model.UrlImage" class="img-fluid" alt=""></a>
                        }
                        else
                        {
                            <a href="@Url.Action("AddToCart", "KhachHang", new {varLocal=Model.Id})"><img src="~/@Model.UrlImage" class="img-fluid" alt=""></a>
                        }
                    </td>
                    <td with="75%">
                        <p><a style="color:white; font-size:20px"><b>@Model.Name</b></a></p>
                        <p class="text-justify"><a style="color:white; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">@Model.Description</a></p>
                        <center>
                            <p><a style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:large"><b>@Model.Price.ToString("N").Substring(0,Model.Price.ToString("N").Length-3) VND</b></a></p>
                        </center>
                        <p><a style="color:gainsboro; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px">@Model.Soluong.ToString() products left</a></p>
                        <p>
                            @if (Model.Evaluate == 5)
                            {
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                            }
                            @if (Model.Evaluate == 4)
                            {
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                            }
                            @if (Model.Evaluate == 3)
                            {
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                            }
                            @if (Model.Evaluate == 2)
                            {
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                            }
                            @if (Model.Evaluate == 1)
                            {
                                <i class="fa fa-star fa-1" style="color:yellow"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                            }
                            @if (Model.Evaluate == 0)
                            {
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:gainsboro"></i>
                                <i class="fa fa-star fa-1" style="color:g"></i>
                            }
                            <a style="color:gainsboro; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:14px">&nbsp;&nbsp;&nbsp;&nbsp;Sold @Model.Tongmua</a>
                            @if (string.IsNullOrEmpty(ViewBag.UserName_))
                            {
                                <center>
                                    <a href="@Url.Action("Login", "KhachHang")"><i class="fas fa-shopping-cart fa-2xl" style="color: #ec6090;"></i></a>
                                    <a href="@Url.Action("Login", "KhachHang")">
                                        <span style="font-size:12px;color:gainsboro">Add to cart </span>
                                    </a>
                                </center>
                            }
                            else
                            {
                                <center>
                                    <a href="@Url.Action("AddToCart", "KhachHang", new {varLocal=Model.Id})"><i class="fas fa-shopping-cart fa-2xl" style="color: #ec6090;"></i></a>
                                    <a href="@Url.Action("AddToCart", "KhachHang",new {varLocal=Model.Id})">
                                        <span style="font-size:12px;color:gainsboro">Add to cart </span>
                                    </a>
                                </center>
                            }
                        </p>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
