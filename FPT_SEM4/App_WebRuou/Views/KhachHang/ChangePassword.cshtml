@model App_WebRuou.Models.KhachHang

@{
    ViewData["Title"] = "ChangePassword";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <!-- ***** Banner Start ***** -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="main-profile ">
                            <div class="row">
                                <div class="col-lg-4">
                                    <img src="~/assets/images/profile.jpg" alt="" style="border-radius: 23px;">
                                </div>
                                <div class="col-lg-8 align-self-center">
                                    <div class="main-info header-text">
                                        <div class="text col-lg-12 text-center">
                                            <!--Name -->
                                            <center>
                                                <div>
                                                    <p><a style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:25px"><b>@ViewBag.UserName_</b></a></p>
                                                </div>
                                            </center>
                                            <br />
                                            <form asp-action="ChangePassword" enctype="multipart/form-data" method="post">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="row">
                                                    <input type="hidden" asp-for="Id" />
                                                    <input type="hidden" asp-for="UserName" />
                                                    <input type="hidden" asp-for="Email" />
                                                    <input type="hidden" asp-for="Password" />
                                                    <input type="hidden" asp-for="Address" />
                                                    <input type="hidden" asp-for="Phone" />
                                                    <input type="hidden" asp-for="Status" />
                                                    <!-- Old Password -->

                                                    <div class="input-group col-lg-6 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-lock text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input name="oldPass" type="password" placeholder="Old Password" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>
                                                    <!-- Password -->
                                                    <div class="input-group col-lg-6 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-lock text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input name="newPass" type="password" placeholder="New Password" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>
                                                    <!-- Password Confirmation -->
                                                    <div class="input-group col-lg-6 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-lock text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input name="confirmPass" type="password" placeholder="Confirm Password" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md">
                                                    </div>
                                                    <div class="form-group col-lg-12 mx-auto mb-0">
                                                        <input type="submit" value="Change" class="btn btn-primary btn-sm btn-block py-2 font-weight-bold" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px" onclick="return confirm('Are you sure you want to change pasword?')" />
                                                    </div>
                                                    <div class="text-center w-100">
                                                        <br />
                                                        <h5 style="color:#ec6090">@ViewBag.msg</h5>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div>
                                            <p>
                                                <a style="color:#ec6090; font-size:13px">Email:</a>
                                                <a style="color:white ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px">@ViewBag.Email_</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
