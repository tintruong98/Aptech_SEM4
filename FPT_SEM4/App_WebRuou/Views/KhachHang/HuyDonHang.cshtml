@model IEnumerable<App_WebRuou.Models.DonHangImage>

@{
    ViewData["Title"] = "HuyDonHang";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <div class="gaming-library">
                    <div class="col-lg-auto">
                        <div class="heading-section">
                            <h4><em>The order you have purchased needs </em>to be cancelled</h4>
                        </div>
                        <br />
                        @foreach (var item in Model)
                        {
                            <div class="item">
                                <ul>
                                    <li><img src="~/@item.Url" alt="" class="templatemo-item"></li>

                                    @*<li><h4>Mã</h4><span style="color:white">@item.Id</span></li>*@

                                    <li><h4>Booking date</h4><span style="color:white">@item.NgayDat.Substring(0,10)</span></li>

                                    <li><h4>Delivery date</h4><span style="color:white">@item.NgayGiao.Substring(0,10)</span></li>

                                    <li><h4>Quantity</h4><span style="color:white">@item.SoLuong</span></li>

                                    <li><h4>Total order</h4><span style="color:#ec6090">@item.TongTien.ToString("N").Substring(0,@item.TongTien.ToString("N").Length-3) VND</span></li>
                                    @if (item.TrangThaiGH == 0)
                                    {
                                        <li><div class="main-button"><a href="@Url.Action("XemChiTieDonHang", "KhachHang", new {varLocal = item.Id,trangthaiGH=item.TrangThaiGH,mahuy="Del"})">Reject</a></div></li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
