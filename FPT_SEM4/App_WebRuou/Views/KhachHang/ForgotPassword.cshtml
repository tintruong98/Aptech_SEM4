@model App_WebRuou.Models.KhachHang
@{
    ViewData["Title"] = "ForgotPassword";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <!-- ***** Banner Start ***** -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="main-profile ">
                            <div class="row">
                                <div class="col-lg-5">
                                    <img src="~/assets/images/profile.jpg" alt="" style="border-radius: 23px;">
                                </div>
                                <div class="col-lg-7 align-self-center">
                                    <div class="main-info header-text">
                                        <div class="text col-lg-12 text-center">
                                            <p><a style="color:gainsboro">The system has sent a verification code to your email. Please check your email, get the verification code to change the password!</a></p>
                                            <br />
                                            <form asp-action="ForgotPassword" enctype="multipart/form-data" method="post">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <input type="hidden" asp-for="Id" />
                                                <!-- Email Address -->
                                                <div class="input-group col-lg-12 mb-4">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                            <i class="fa fa-envelope text-muted"></i>
                                                        </span>
                                                    </div>
                                                    <input asp-for="Email" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" readonly />
                                                </div>
                                                <!-- Token -->
                                                <div class="input-group col-lg-12 mb-4">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                            <i class="fa fa-lock text-muted"></i>
                                                        </span>
                                                    </div>
                                                    <input placeholder="Enter the code from the email" type="password" name="checkToken" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                </div>
                                                <!-- Password -->
                                                <div class="input-group col-lg-12 mb-4">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                            <i class="fa fa-lock text-muted"></i>
                                                        </span>
                                                    </div>
                                                    <input name="newPass" type="password" placeholder="New Password" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                </div>
                                                <!-- Password Confirmation -->
                                                <div class="input-group col-lg-12 mb-4">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                            <i class="fa fa-lock text-muted"></i>
                                                        </span>
                                                    </div>
                                                    <input name="confirmPass" type="password" placeholder="Confirm Password" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md">
                                                </div>
                                                <input type="hidden" asp-for="UserName" />
                                                <input type="hidden" asp-for="Email" />
                                                <input type="hidden" asp-for="Password" />
                                                <input type="hidden" asp-for="Address" />
                                                <input type="hidden" asp-for="Phone" />
                                                <input type="hidden" asp-for="Status" />

                                                <!-- Submit Button -->
                                                <div class="form-group col-lg-12 mx-auto mb-0">
                                                    <input type="submit" value="Change" class="btn btn-primary btn-block py-2 font-weight-bold" />
                                                </div>
                                                <!-- Already Registered -->
                                                <div class="text-center w-100">
                                                    <br />
                                                    <p class="text-muted font-weight-bold">Already have an account? <a href="@Url.Action("Login", "KhachHang")" style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">Login</a></p>
                                                </div>
                                                <div class="text-center w-100">
                                                    <br />
                                                    <h5 style="color:#ec6090">@ViewBag.msg</h5>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
