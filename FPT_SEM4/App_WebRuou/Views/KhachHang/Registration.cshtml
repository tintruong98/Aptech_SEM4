@model App_WebRuou.Models.KhachHang
@{
    ViewData["Title"] = "Registration";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
                <!-- ***** Banner Start ***** -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="main-profile ">
                            <div class="row">
                                <div class="col-lg-5">
                                    <img src="~/assets/images/profile.jpg" alt="" style="border-radius: 23px;">
                                </div>
                                <div class="col-lg-7 align-self-center">
                                    <div class="main-info header-text">
                                        <div class="text col-lg-12 text-center">
                                            <center>
                                                <div>
                                                    <p><a style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:25px"><b>Create Account</b></a></p>
                                                </div>
                                            </center>
                                            <br />
                                            <form asp-action="Registration" enctype="multipart/form-data" method="post">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="row">
                                                    <!--UserName -->
                                                    <div class="input-group col-lg-12 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-user text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input placeholder="First and last name" asp-for="UserName" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>

                                                    <!-- Email Address -->
                                                    <div class="input-group col-lg-12 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-envelope text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input placeholder="Email Address" asp-for="Email" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>

                                                    <!-- Password -->
                                                    <div class="input-group col-lg-6 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-lock text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input name="newPass" type="password" placeholder="Password" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>

                                                    <!-- Password Confirmation -->
                                                    <div class="input-group col-lg-6 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-lock text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input name="confirmPass" type="password" placeholder="Confirm Password" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md">

                                                    </div>
                                                    <!-- Address -->
                                                    <div class="input-group col-lg-12 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-address-book text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input placeholder="Address" asp-for="Address" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>

                                                    <!-- Phone -->
                                                    <div class="input-group col-lg-12 mb-4">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text bg-white px-4 border-md border-right-0">
                                                                <i class="fa fa-phone text-muted"></i>
                                                            </span>
                                                        </div>
                                                        <input placeholder="Phone" asp-for="Phone" style="color:black ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" class="form-control bg-white border-left-0 border-md" />
                                                    </div>

                                                    <input type="hidden" asp-for="Id" />
                                                    <input type="hidden" asp-for="Password" />
                                                    <input type="hidden" asp-for="Status" />

                                                    <!-- Submit Button -->
                                                    <div class="form-group col-lg-12 mx-auto mb-0">
                                                        <input type="submit" value="Register" class="btn btn-primary btn-sm btn-block py-2 font-weight-bold" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:13px" />
                                                    </div>
                                                    <!-- Already Registered -->
                                                    <div class="text-center w-100">
                                                        <br />
                                                        <p class="text-muted font-weight-bold">Already have an account? <a href="@Url.Action("Login", "KhachHang")" style="color:#ec6090 ; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:15px">Login</a></p>
                                                    </div>
                                                    <div class="text-center w-100">
                                                        <br />
                                                        <h5 style="color:#ec6090">@ViewBag.msg</h5>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
